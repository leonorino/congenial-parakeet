<Window x:Class="working.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:working"
        mc:Ignorable="d"
        Title="Authorization" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Authorization"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10"/>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" Width="300" HorizontalAlignment="Center">
            <TextBlock Text="Username" FontWeight="Bold" FontSize="14"/>
            <TextBox x:Name="Username"
                     Margin="0,5,0,10"
                     Height="35"
                     BorderBrush="Black"
                     BorderThickness="1"/>

            <TextBlock Text="Password" FontWeight="Bold" FontSize="14"/>
            <PasswordBox x:Name="Password"
                         Margin="0,5,0,10"
                         Height="35"
                         BorderBrush="Black"
                         BorderThickness="1"/>

            <Button Content="Log In"
                    Width="120"
                    Height="30"
                    BorderBrush="Black"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    Cursor="Hand"
                    Margin="0,10,0,0"
                    BorderThickness="1"
                    Click="ButtonLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
