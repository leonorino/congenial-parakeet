<Window x:Class="working.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:working"
        mc:Ignorable="d"
        Title="Management" Height="600" Width="800">
    <Grid Margin="10">
        <TabControl>
            <TabItem Header="Guests">
                <Frame Name="GuestsFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>

            <TabItem Header="Bookings">
                <Frame Name="BookingsFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>

            <TabItem Header="Rooms">
                <Frame Name="RoomsFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>

            <TabItem Header="Cleaning">
                <Frame Name="CleaningFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
        </TabControl>
    </Grid>
    
</Window>
